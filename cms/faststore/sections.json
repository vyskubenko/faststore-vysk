          "title": "Items per page",
          "type": "number",
          "default": 1
        },
        "infiniteMode": {
          "title": "Infinite mode",
          "type": "boolean",
          "default": true
        },
        "list": {
          "title": "Item List",
          "type": "array",
          "items": {
            "title": "Banner",
            "type": "object",
            "properties": {
              "imageDesktop": {
                "title": "Image Desktop",
                "type": "string",
                "widget": { "ui:widget": "image-uploader" }
              },
              "imageMobile": {
                "title": "Image Mobile",
                "type": "string",
                "widget": { "ui:widget": "image-uploader" }
              },
              "name": {
                "title": "Name",
                "type": "string"
              },
							"linkName": {
                "title": "Link Name",
                "type": "string"
              },
              "url": {
                "title": "Link",
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
